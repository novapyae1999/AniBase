@model AniBaseFinal.Models.Anime

@{
    ViewBag.Title = "Delete";
    var image = "https://myanimelist.cdn-dena.com/images/anime/" + @Model.IMGURL;
}

<header class="w3-container w3-red w3-center" style="padding:128px 16px; background-image: url(/images/BackgroundFull.jpg); background-size: cover; ">
    <h1 class="w3-margin w3-jumbo">Delete</h1>
    <p class="w3-xlarge"><h3>Are you sure you want to delete this?</h3></p>

</header>

<!-- First Grid -->
<div class="w3-row-padding w3-padding-64 w3-container">
    <div class="w3-content">
        <div class="w3-twothird">
            <dl class="dl-horizontal">
                <dd>
                    <img src="@image" height="200px"/>
                </dd>
                
            </dl>
        </div>

        <div class="w3-third w3-center">
                <dl class="dl-horizontal">
                    <dt>
                        <h4>@Html.DisplayNameFor(model => model.ID) : </h4>
                    </dt>

                    <dd>
                        <h4>@Html.DisplayFor(model => model.ID)</h4>
                    </dd>
                    <dt>
                        <h6> @Html.DisplayNameFor(model => model.TITLE) : </h6>
                    </dt>

                    <dd>
                        <h6>@Html.DisplayFor(model => model.TITLE)</h6>
                    </dd>
                </dl>
        </div>
    </div>
</div>

<!-- Second Grid -->
<div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
    <div class="w3-content">
        <div class="w3-third w3-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
    <center>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <button>@Html.ActionLink("Back to List", "Index")</button>
        </div>
    </center>   
            }
        </div>
    </div>
</div>

<div class="w3-container w3-black w3-center w3-opacity w3-padding-64">
    <h1 class="w3-margin w3-xlarge">Quote of the day:<div id="quote"></div></h1>
</div>

